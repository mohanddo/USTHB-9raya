<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    android:gravity="center"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textViewLink"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="24dp"
        android:layout_marginBottom="24dp"
        android:textColor="@color/black"
        android:textAlignment="center"
        android:textSize="8sp"
        android:text="Selected file link will appear here" />

    <TextView
        android:id="@+id/text_link_drive"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="24dp"
        android:textSize="8sp"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textStyle="normal"
        android:text="https://drive.google.com/file/d/1fLKp29QBEglqyYpudhcbUorNS4_o7neb/view?usp=drive_link"
        android:layout_gravity="center">
    </TextView>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/butt_open_drive"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="24dp"
        android:text="open drive"
        android:backgroundTint="@color/black"
        android:textAllCaps="false"
        android:layout_marginTop="24dp"
        android:textStyle="bold"
        android:textColor="@color/white">

    </androidx.appcompat.widget.AppCompatButton>


    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/butt_open_file_picker"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="24dp"
        android:text="upload drive"
        android:backgroundTint="@color/black"
        android:textAllCaps="false"
        android:layout_marginTop="24dp"
        android:textStyle="bold"
        android:textColor="@color/white">

    </androidx.appcompat.widget.AppCompatButton>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/butt_send_email_upload"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="24dp"
        android:text="send email"
        android:backgroundTint="@color/black"
        android:textAllCaps="false"
        android:layout_marginTop="24dp"
        android:textStyle="bold"
        android:textColor="@color/white">

    </androidx.appcompat.widget.AppCompatButton>






</androidx.appcompat.widget.LinearLayoutCompat>